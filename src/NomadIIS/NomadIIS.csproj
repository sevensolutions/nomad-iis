<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>disable</ImplicitUsings>
		<AssemblyName>nomad_iis</AssemblyName>
		<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
		<Product>Windows IIS Driver for HashiCorp Nomad</Product>
		<ProductName>Windows IIS Driver for HashiCorp Nomad</ProductName>
		<Copyright>(C) Copyright 2025, Daniel Peinhopf</Copyright>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Debug'">
		<DefineConstants>MANAGEMENT_API;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Grpc.AspNetCore" Version="2.76.0" />
		<PackageReference Include="Grpc.AspNetCore.HealthChecks" Version="2.76.0" />
		<PackageReference Include="Grpc.AspNetCore.Server.Reflection" Version="2.76.0" />
		<PackageReference Include="MessagePack" Version="3.1.4" />
		<PackageReference Include="Microsoft.Web.Administration" Version="11.1.0" />
		<PackageReference Include="Serilog.AspNetCore" Version="10.0.0" />
		<PackageReference Include="System.Management" Version="10.0.2" />
		<PackageReference Include="System.Threading.Channels" Version="10.0.2" />
	</ItemGroup>

	<ItemGroup Condition="$(DefineConstants.Contains('MANAGEMENT_API'))">
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.15.0" />
		<PackageReference Include="Microsoft.Playwright" Version="1.58.0" />
		<PackageReference Include="CliWrap" Version="3.10.0" />
	</ItemGroup>

	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
			<_Parameter1>$(ProjectName).Tests</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>

	<ItemGroup>
		<Protobuf Include="**/*.proto" GrpcServices="Server" />
	</ItemGroup>

</Project>
